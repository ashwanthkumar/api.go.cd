json = {
  materials: [
    {
      type: 'git',
      attributes: {
        name: 'api-docs',
        url: 'https://github.com/gocd/api.go.cd',
        branch: 'master',
        destination: 'api.gocd.io',
        auto_update: true,
        filter: {
          ignore: %w(**/*.xml **/*.html)
